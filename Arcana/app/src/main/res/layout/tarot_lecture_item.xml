<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:tools="http://schemas.android.com/tools">

  <ImageView
    android:id="@+id/imageView"
    android:layout_width="112dp"
    android:layout_height="197dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toStartOf="@id/card_meaning_text"
    android:src="@drawable/ic_two_of_cups"
    app:layout_constraintStart_toStartOf="parent"
    tools:layout_editor_absoluteY="0dp" />

  <TextView
    android:id="@+id/title_card_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/jost_bold"
    app:layout_constraintStart_toEndOf="@id/imageView"
    app:layout_constraintTop_toTopOf="@id/imageView"
    tools:text="Two Of Cups-" />

  <TextView
    android:id="@+id/card_is_reversed"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:fontFamily="@font/jost_bold"
    app:layout_constraintBottom_toBottomOf="@+id/title_card_name"
    app:layout_constraintStart_toEndOf="@+id/title_card_name"
    app:layout_constraintTop_toTopOf="@+id/title_card_name"
    tools:text="reversed" />

  <TextView
    android:id="@+id/card_meaning_text"
    android:layout_width="0dp"
    android:textSize="14sp"
    android:fontFamily="@font/frank_ruhl_regular"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/imageView"
    app:layout_constraintTop_toBottomOf="@id/title_card_name"
    tools:text="A youthful figure in the robe of a magician, having the countenance of divine Apollo of divine Apolloof divine Apolloof divine Apolloof divine Apolloof divine Apolloof divine Apolloof divine Apolloof divine Apolloof divine Apolloof divine Apolloof divine Apolloof divine Apolloof divine Apolloof divine Apolloof divine Apolloof divine Apolloof divine Apollo re in the robe of a magician, having the countenance of " />

  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:background="@android:color/darker_gray"
    app:layout_constraintBottom_toBottomOf="@id/imageView"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>